+	struct drm_property *prop;
+
+	prop = drm_property_create(adev_to_drm(adev),
+				   DRM_MODE_PROP_BLOB,
+				   "VALVE1_PLANE_DEGAMMA_LUT", 0);
+	if (!prop)
